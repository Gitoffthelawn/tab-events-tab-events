{
    "env": {
        "webextensions": true,
		"browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
		"camelcase": "off",
		"id-match": [
			"error",
			"^[a-z]+(_[a-z]+)*$",
			{
				"onlyDeclarations": true,
				"ignoreDestructuring": true
			}
		]
    }
}
